}



#header {
  position: sticky;
  top: 0;
  background: white;
  width: 100%;
  /* height: 12vh; */
  box-shadow: 1px 1px 4px 0 rgba(0, 0, 0, .5);
}

.header-logo {
  width: 11em;
  height: 3.5em;
  padding: 2vh;
}

/* hamburger menu */
  .header-logo {
    float: left;
  }

  #header .menu-bar {
    margin: 0;
    padding: 0;
    overflow: hidden;
  }

  .menu-bar li {
    background: white;
    list-style-type: none;
  }

  .menu-bar a {
    color: #000;
    /* a tags are normally inline. setting it to block allows you to click on the white area next to it */
    display: block;
    outline: 1px solid red;
    padding: 2vh;
    border-right: 1px solid #aaa;
    text-decoration: none;
  }

  .menu-bar a:hover {
    background-color: #ddd;
  }

  #header .menu-bar {
    clear: both;
    max-height: 0px;
    transition: max-height .2s ease-out;
  }

  #header .hamburger-icon {
    padding: 50px 30px;
    /* position is relative so the children can be set as absolute */
    position: relative;
    float: right;
    cursor: pointer;
  }

  /* nav-icon */
  #header .hamburger-icon .nav-icon {
    background: #333;
    display: block;
    height: 2px;
    width: 18px;
    position: relative;
    transition: background .35s ease-out;
  }

  #header .hamburger-icon .nav-icon::before {
    background: #333;
    content: "";
    display: block;
    height: 100%;
    width: 100%;
    position: absolute;
    transition: all .2s ease-out;
    top: 5px;
  }

  #header .hamburger-icon .nav-icon::after {
    background: #333;
    content: "";
    display: block;
    height: 100%;
    width: 100%;
    position: absolute;
    transition: all .2s ease-out;
    top: -5px;
  }

  #header .hamburger-btn {
    display: none;
  }

  /*  the tilde separates two sequences of selectors. the elements represented by the two sequences share the same parent in the document tree.
  first-sequence occurs THEN(~) second sequence. */
  #header .hamburger-btn:checked ~ .menu-bar {
    max-height: 240px;
  }

  /* nav-icon animation */
  #header .hamburger-btn:checked ~ .hamburger-icon .nav-icon {
    background: transparent;
  }

  #header .hamburger-btn:checked ~ .hamburger-icon .nav-icon::before {
    transform: rotate(-45deg);
    top: 0;
  }

  #header .hamburger-btn:checked ~ .hamburger-icon .nav-icon::after {
    transform: rotate(45deg);
    top: 0;
  }
/* END hamburger menu */



